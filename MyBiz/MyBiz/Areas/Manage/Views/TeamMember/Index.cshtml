@model List<TeamMember>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <a asp-action="create" class="btn btn-primary">Create</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>

                        <th scope="col">FullName</th>
                        <th scope="col">Position</th>
                        <th scope="col">Desc</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tm in Model)
                    {
                        count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@tm.FullName</td>
                        <td>@tm.Position.Name</td>
                        <td>@tm.Desc</td>

                        <td>
                            <a asp-action="edit" asp-route-id="@tm.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="delete" asp-route-id="@tm.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



