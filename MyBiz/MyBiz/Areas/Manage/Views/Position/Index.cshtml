@model List<Position>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <a asp-action="create" class="btn btn-primary">Create</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pst in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@pst.Name</td>
                            
                            <td>
                                <a asp-action="edit" asp-route-id="@pst.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@pst.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

